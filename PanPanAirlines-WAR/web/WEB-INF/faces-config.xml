<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <navigation-rule>
        <from-view-id>/Employee/mainmenu.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{employeeManagedBean.prepareForEmployeeAdd()}</from-action>
            <from-outcome>Admin</from-outcome>
            <to-view-id>/Employee/add.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{employeeManagedBean.prepareForEmployeeAdd()}</from-action>
            <from-outcome>NoAdmin</from-outcome>
            <to-view-id>/accessDenied.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{employeeManagedBean.prepareForEmployeeView()}</from-action>
            <from-outcome>Admin</from-outcome>
            <to-view-id>/Employee/displayAnyDetails.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{employeeManagedBean.prepareForEmployeeView()}</from-action>
            <from-outcome>NoAdmin</from-outcome>
            <to-view-id>/Employee/displayMyDetails.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{employeeManagedBean.prepareForEmployeeView()}</from-action>
            <from-outcome>Error</from-outcome>
            <to-view-id>/criticalError.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{employeeManagedBean.prepareForEmployeeUpdate()}</from-action>
            <from-outcome>Admin</from-outcome>
            <to-view-id>/Employee/getSingleDetails.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{employeeManagedBean.prepareForEmployeeUpdate()}</from-action>
            <from-outcome>NoAdmin</from-outcome>
            <to-view-id>/Employee/updateMyDetails.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{employeeManagedBean.prepareForEmployeeUpdate()}</from-action>
            <from-outcome>Error</from-outcome>
            <to-view-id>/criticalError.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{employeeManagedBean.prepareForEmployeeDelete()}</from-action>
            <from-outcome>Admin</from-outcome>
            <to-view-id>/Employee/deleteEmployee.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{employeeManagedBean.prepareForEmployeeDelete()}</from-action>
            <from-outcome>NoAdmin</from-outcome>
            <to-view-id>/accessDenied.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/Employee/add.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{employeeManagedBean.addEmployee()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/operationSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{employeeManagedBean.addEmployee()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/operationFailed.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/Employee/deleteEmployee.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{employeeManagedBean.removeEmployee()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/operationSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{employeeManagedBean.removeEmployee()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/operationFailed.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/Employee/getSingleDetails.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{employeeManagedBean.getEmployeeDetails()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/Employee/updateAnyDetails.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{employeeManagedBean.getEmployeeDetails()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/operationFailed.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/Employee/updateAnyDetails.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{employeeManagedBean.updateEmployeeDetails()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/operationSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{employeeManagedBean.updateEmployeeDetails()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/operationFailed.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/Employee/updateMyDetails.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{employeeManagedBean.updateEmployeeDetails()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/operationSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{employeeManagedBean.updateEmployeeDetails()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/operationFailed.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{logoutManagedBean.logout()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/authorisationFailed.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{logoutManagedBean.logout()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/FlightCrew/getCrewID.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{flightCrewManagedBean.findCrewDetails()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/FlightCrew/displayCrewDetails.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{flightCrewManagedBean.findCrewDetails()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/operationFailed.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/FlightCrew/createCrew.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{flightCrewManagedBean.createCrew()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/operationSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{flightCrewManagedBean.createCrew()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/operationFailed.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
